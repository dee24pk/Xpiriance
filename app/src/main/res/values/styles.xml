<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="appbar" parent="Theme.AppCompat">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorPrimary">@color/colorSolid</item>
        <item name="android:colorPrimaryDark">@color/colordark</item>
    </style>
    <style name="tabhome" parent="Theme.AppCompat">
        <item name="android:background">@drawable/shape</item>
    </style>
    <style name= "tab_home" parent="Theme.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name= "asktab" parent="Theme.AppCompat">
        <item name="android:textColor">#B1BAB7  </item>
        <item name="android:gravity">center</item>
       <item name="android:textSize">14dp</item>
       <item name="android:padding">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
<style name="post" parent="Theme.AppCompat">
    <item name="android:textSize">16dp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:padding">8dp</item>
</style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
